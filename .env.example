# =============================================================================
# FlyReady Lab - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Application
# =============================================================================
APP_NAME=FlyReady Lab
APP_VERSION=2.0.0
APP_ENVIRONMENT=development
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000

# =============================================================================
# Database
# =============================================================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flyready
DB_USER=flyready
DB_PASSWORD=your-secure-password
DB_DATA_DIR=data

# For Docker
DATABASE_URL=postgresql://flyready:flyready123@postgres:5432/flyready

# PostgreSQL settings
POSTGRES_USER=flyready
POSTGRES_PASSWORD=flyready123
POSTGRES_DB=flyready

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# JWT
SECURITY_JWT_SECRET_KEY=your-jwt-secret-key
SECURITY_JWT_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=60
SECURITY_RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Password Policy
SECURITY_PASSWORD_MIN_LENGTH=8

# =============================================================================
# Authentication
# =============================================================================
# Admin credentials (CHANGE IN PRODUCTION!)
ADMIN_PASSWORD=your-admin-password
TESTER_PASSWORD=your-tester-password

# JWT Settings
AUTH_JWT_SECRET=change-this-jwt-secret-in-production
AUTH_JWT_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=60
AUTH_REFRESH_TOKEN_EXPIRE_DAYS=30

# Kakao OAuth
AUTH_KAKAO_CLIENT_ID=your-kakao-client-id
AUTH_KAKAO_CLIENT_SECRET=your-kakao-client-secret
AUTH_KAKAO_REDIRECT_URI=http://localhost:8501/callback/kakao

# Google OAuth
AUTH_GOOGLE_CLIENT_ID=your-google-client-id
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
AUTH_GOOGLE_REDIRECT_URI=http://localhost:8501/callback/google

# Apple OAuth
AUTH_APPLE_CLIENT_ID=
AUTH_APPLE_CLIENT_SECRET=

# =============================================================================
# AI Services
# =============================================================================
# OpenAI (Required)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Anthropic Claude (Optional)
AI_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
AI_ANTHROPIC_MODEL=claude-3-opus-20240229

# Default AI Provider
AI_DEFAULT_PROVIDER=openai

# =============================================================================
# Voice & Speech Services
# =============================================================================
# Google Cloud TTS (Optional - for natural Korean voice)
# Get key at: https://console.cloud.google.com/apis/credentials
GOOGLE_TTS_API_KEY=

# D-ID (Optional - AI Avatar video generation)
DID_API_KEY=

# Naver Clova (Optional - Korean speech recognition)
CLOVA_CLIENT_ID=
CLOVA_CLIENT_SECRET=

# =============================================================================
# Payment Services
# =============================================================================
# KakaoPay
PAYMENT_KAKAOPAY_CID=TC0ONETIME
PAYMENT_KAKAOPAY_ADMIN_KEY=
PAYMENT_KAKAOPAY_SECRET_KEY=

# Toss Payments
PAYMENT_TOSS_CLIENT_KEY=
PAYMENT_TOSS_SECRET_KEY=

# Payment URLs
PAYMENT_CALLBACK_URL=http://localhost:8501/payment/callback
PAYMENT_CANCEL_URL=http://localhost:8501/payment/cancel
PAYMENT_FAIL_URL=http://localhost:8501/payment/fail

# =============================================================================
# Notification Services
# =============================================================================
# Email (SMTP)
NOTIFICATION_SMTP_HOST=smtp.gmail.com
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USER=your-email@gmail.com
NOTIFICATION_SMTP_PASSWORD=your-app-password
NOTIFICATION_SMTP_FROM_EMAIL=noreply@flyreadylab.com
NOTIFICATION_SMTP_FROM_NAME=FlyReady Lab
NOTIFICATION_SMTP_USE_TLS=true

# Firebase Cloud Messaging (Optional)
NOTIFICATION_FCM_SERVER_KEY=
NOTIFICATION_FCM_PROJECT_ID=

# Kakao Alimtalk (Optional)
NOTIFICATION_KAKAO_ALIMTALK_SENDER_KEY=

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry Error Tracking
SENTRY_DSN=

# Grafana Dashboard
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Prometheus
PROMETHEUS_PORT=9090

# =============================================================================
# Streamlit
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s | %(levelname)-8s | %(name)s:%(lineno)d | %(message)s
LOG_FILE_PATH=logs/app.log
LOG_JSON_FORMAT=false

# =============================================================================
# Docker
# =============================================================================
VERSION=latest
DOMAIN=localhost
